<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Patusari" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/theme_color_dark_mode</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_color_dark_mode</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="collapse_toolbar_style" parent="Base.Theme.Patusari">
        <item name="android:background">@color/background_color_dark_mode</item>
        <item name="contentScrim">@color/background_color_dark_mode</item>
        <item name="fontFamily">@font/sans_medium_custom</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
        <item name="android:textColor">@color/text_color_dark_mode</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>


    <style name="page_background_style" parent="Base.Theme.Patusari">
        <item name="android:background">@color/background_color_dark_mode</item>
    </style>

    <style name="button_round_style" parent="Base.Theme.Patusari">
        <item name="android:drawableTint">@color/light_black</item>
        <item name="android:background">@drawable/bg_custom_button_round</item>
        <item name="android:backgroundTint">@color/theme_color_dark_mode</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="fab_style" parent="Theme.MaterialComponents">

        <item name="android:background">@drawable/round_shape</item>
        <item name="android:backgroundTint">@color/theme_color_dark_mode</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:tint">@color/light_black</item>

        <item name="android:fontFamily">@font/sans_medium_custom</item>

    </style>



    <style name="shayari_layout_style" parent="Base.Theme.Patusari">
        <item name="android:background">@drawable/border_background_dark_mode</item>
    </style>
    <style name="shayari_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/shayari_text_color_dark_mode</item>
    </style>

    <style name="icon_tint_style" parent="Base.Theme.Patusari">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="header_icon_tint_style" parent="Base.Theme.Patusari">
        <item name="android:tint">@color/light_white</item>
    </style>

    <style name="like_icon_tint_style" parent="Base.Theme.Patusari">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="edittext_layout_style" parent="Base.Theme.Patusari">
        <item name="android:background">@drawable/bg_custom_edittext_dark_mmode</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/lite_gray</item>
        <item name="android:drawableTint">@color/lite_gray</item>


    </style>

    <style name="cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">@color/cardview_background_dark</item>
    </style>

    <style name="shimmer_cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">@color/cardview_background_dark</item>
    </style>

    <style name="list_cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">@color/cardview_background_dark</item>
    </style>

    <style name="bottom_bar_style" parent="Base.Theme.Patusari">
        <item name="backgroundColor">@color/background_color_dark_mode</item>
        <item name="backgroundTint">@color/background_color_dark_mode</item>
<!--        <item name="sb_backgroundColor">@color/background_color_dark_mode</item>-->
        <item name="android:background">@color/background_color_dark_mode</item>
        <item name="android:backgroundTint">@color/background_color_dark_mode</item>
    </style>


    <style name="nav_menu_design" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/background_color_dark_mode</item>
        <item name="android:textColorSecondary">@color/lite_gray</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
        <item name="android:textSize">@dimen/dim_14</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="parent_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/text_color_dark_mode</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
    </style>

    <style name="sub_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
    </style>

</resources>