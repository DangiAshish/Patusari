<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Patusari" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/theme_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="collapse_toolbar_style" parent="Base.Theme.Patusari">
        <item name="android:background">@color/background_color</item>
        <item name="contentScrim">@color/background_color</item>
        <item name="fontFamily">@font/sans_medium_custom</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="page_background_style" parent="Base.Theme.Patusari">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="edittext_layout_style" parent="Base.Theme.Patusari">
        <item name="android:background">@drawable/bg_custom_edittext</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/lite_gray</item>
        <item name="android:drawableTint">@color/light_black</item>

    </style>

    <style name="cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">@color/light_white</item>
    </style>

    <style name="shimmer_cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">#B6C1FF</item>
    </style>

    <style name="list_cardview_background_style" parent="Base.Theme.Patusari">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="button_round_style" parent="Base.Theme.Patusari">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:background">@drawable/bg_custom_button_round</item>
        <item name="android:backgroundTint">@color/theme_color</item>
        <item name="android:layout_height">@dimen/dim_40</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="shayari_layout_style" parent="Base.Theme.Patusari">
        <item name="android:background">@drawable/border_background</item>
    </style>

    <style name="shayari_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/shayari_text_color</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:colorAccent">@color/theme_color</item>
        <item name="android:background">@color/light_black</item>
        <item name="android:buttonTint">@color/theme_color</item>

    </style>

    <style name="icon_tint_style" parent="Base.Theme.Patusari">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="header_icon_tint_style" parent="Base.Theme.Patusari">
        <item name="android:tint">@color/theme_color</item>
    </style>


    <style name="like_icon_tint_style" parent="Base.Theme.Patusari">
        <!--        <item name="android:tint">@color/black</item>-->
    </style>

    <style name="fab_style" parent="Theme.MaterialComponents">

        <item name="android:background">@drawable/round_shape</item>
        <item name="android:backgroundTint">@color/theme_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>

    </style>

    <style name="nav_menu_design" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/background_color</item>
        <item name="android:textColorSecondary">@color/lite_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
        <item name="android:textSize">@dimen/dim_14</item>
        <item name="titleTextColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="parent_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/sans_bold_custom</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>

    </style>


    <style name="sub_text_style" parent="Base.Theme.Patusari">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/sans_medium_custom</item>
    </style>

